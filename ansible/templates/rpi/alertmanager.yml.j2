global:
  resolve_timeout: 5m

route:
  group_by: ['alertname']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h
  receiver: 'discord'

receivers:
  - name: 'discord'
    discord_configs:
      - webhook_url: '{{ vault_discord_webhook }}'
        send_resolved: true
        title: '{{ "{{" }} .CommonAnnotations.summary {{ "}}" }}'
        message: '{{ "{{" }} range .Alerts {{ "}}" }}
                  **Alert:** {{ "{{" }} .Annotations.description {{ "}}" }}
                  **Severity:** {{ "{{" }} .Labels.severity {{ "}}" }}
                  **Host:** {{ "{{" }} .Labels.instance {{ "}}" }}
                  {{ "{{" }} end {{ "}}" }}'

