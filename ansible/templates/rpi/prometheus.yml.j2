global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets:
          - '{{ vault_rpi_ip }}:9100'   # Raspberry Pi
          - '{{ vault_pve_ip }}:9100'  # Proxmox Host
          - '{{ vault_cargo_ip }}:9100'   # NAS Cargo